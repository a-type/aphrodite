{
  "compilerOptions": {
    "outDir": "./lib/", // path to output directory
    "sourceMap": true, // allow sourcemap support
    "strictNullChecks": true, // enable strict null checks as a best practice
    "module": "esnext", // specify module code generation
    "target": "esnext", // specify ECMAScript target version
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src/",
    "declaration": true,
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "rootDir": "./src"
  },
  "include": ["./src/"],
  "references": [
    { "path": "../packages/cache-runtime-ts" },
    { "path": "../packages/codegen" },
    { "path": "../packages/codegen-api" },
    { "path": "../packages/codegen-cli" },
    { "path": "../packages/codegen-sql" },
    { "path": "../packages/codegen-ts" },
    { "path": "../packages/config-runtime-ts" },
    { "path": "../packages/grammar-extension-api" },
    { "path": "../packages/integrations" },
    { "path": "../packages/model-runtime-ts" },
    { "path": "../packages/mutator-runtime-ts" },
    { "path": "../packages/query-runtime-ts" },
    { "path": "../packages/react" },
    { "path": "../packages/schema" },
    { "path": "../packages/schema-api" }
  ]
}
